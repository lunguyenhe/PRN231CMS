@using PRN231APICMS.Models;
@{
    List<Subject> list =ViewData["listsub"] as List<Subject>; 
}
<h2>@ViewData["mess"]</h2>
<form class="form-group col-md-6" asp-action="Create" asp-asp-controller="Assignment" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="exampleInputTitle">Title</label>
        <input type="text" class="form-control" id="title" placeholder="Enter Title" name="title">
    </div>
    <div class="form-group">
        <label for="exampleInputDescription">Description</label>
        <input type="text" class="form-control" id="description" placeholder="Description" name="description">
    </div>
    <div class="form-group">
        <label for="exampleInputDescription">WeekNumber(1-10)</label>
        <input type="number" class="form-control" min="1" max="10" id="description" placeholder="Week" name="weeknumber">
    </div>
    <div class="form-group">
        <label for="exampleInputDescription">Subject</label>
       <select name="subject">
            @foreach(var item in list)
            {
                <option value="@item.SubjectId">
                    @item.SubjectName
                </option>
            }
          
       </select>
    </div>

    <div id="date-picker-example" class="md-form md-outline input-with-post-icon datepicker">
        <input placeholder="Select date" type="datetime-local" id="example" class="form-control" name="date">
        <i class="fas fa-calendar input-prefix" tabindex=0></i>
    </div>
    <div class="form-group">
        <label for="exampleInputFile">File</label>
        <input type="file" id="avatar" name="file" accept=".rar">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>